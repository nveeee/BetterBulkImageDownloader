{
    "name": "Better Bulk Image Downloader",
    "version": "0.0.1",
    "description": "Queue images for download and download them all at once.",
    "permissions": ["contextMenus", "storage", "downloads", "tabs"],
    "icons": {
      "16": "assets/icon.png"
    },
    "host_permissions": ["https://*/*"],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_icon": {
        "16": "assets/icon.png",
        "24": "assets/icon.png",
        "32": "assets/icon.png"
      },
      "default_title": "Better Bulk Image Downloader",
      "default_popup": "popup.html"
    },
    "commands": {
      "download_all": {
        "suggested_key": {
          "default": "Ctrl+Shift+D",
          "mac": "MacCtrl+Shift+D"
        },
        "description": "Download all images"
      }
    },
    "manifest_version": 3
}
